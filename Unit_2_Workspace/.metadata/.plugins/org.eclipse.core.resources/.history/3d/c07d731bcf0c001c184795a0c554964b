#include <stdio.h>
void main(){

	int character;
	printf("Enter an integer you want to check: \n");
	fflush(stdin); fflush(stdout);
	scanf("%d", &character);

	if(character % 2 == 0){
		printf("%d is even.\n", character);
	}
	else printf("%d is odd.\n", character);
}
